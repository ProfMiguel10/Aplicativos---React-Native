// Importa o React e o Hook useState para controle de estado
import React, { useState } from 'react';

// Importa componentes do React Native
// StyleSheet → criar estilos
// Text → exibir textos
// View → container/estrutura
// TouchableOpacity → botão com efeito de toque
import { StyleSheet, Text, View, TouchableOpacity } from 'react-native';

// Define o componente principal da aplicação
export default function App() {

  // Cria o estado "count" (contador)
  // count → valor atual
  // setCount → função para atualizar o valor
  // 0 → valor inicial
  const [count, setCount] = useState(0);

  // Retorna o que será exibido na tela
  return (

    // View principal da tela
    <View style={styles.container}>

      {/* Título da aplicação */}
      <Text style={styles.title}>Meu Contador</Text>
      
      {/* Caixa que envolve o número do contador */}
      <View style={styles.counterBox}>
        {/* Mostra o valor atual do contador */}
        <Text style={styles.number}>{count}</Text>
      </View>

      {/* Container que organiza os botões lado a lado */}
      <View style={styles.buttonContainer}>

        {/* Botão para diminuir o contador */}
        <TouchableOpacity 
          // Aplica dois estilos: botão padrão + estilo de decremento
          style={[styles.button, styles.decrement]} 
          // Ao pressionar, diminui 1 do contador
          onPress={() => setCount(count - 1)}
        >
          <Text style={styles.buttonText}>-1</Text>
        </TouchableOpacity>

        {/* Botão para aumentar o contador */}
        <TouchableOpacity 
          // Aplica dois estilos: botão padrão + estilo de incremento
          style={[styles.button, styles.increment]} 
          // Ao pressionar, aumenta 1 no contador
          onPress={() => setCount(count + 1)}
        >
          <Text style={styles.buttonText}>+1</Text>
        </TouchableOpacity>

      </View>

      {/* Botão para zerar o contador */}
      <TouchableOpacity onPress={() => setCount(0)}>
        <Text style={styles.resetText}>Zerar Contador</Text>
      </TouchableOpacity>

    </View>
  );
}

// Criação dos estilos usando StyleSheet
const styles = StyleSheet.create({

  // Estilo da tela principal
  container: {
    flex: 1, // Ocupa toda a tela
    backgroundColor: '#f5f5f5', // Cor de fundo
    alignItems: 'center', // Centraliza horizontalmente
    justifyContent: 'center', // Centraliza verticalmente
  },

  // Estilo do título
  title: {
    fontSize: 24, // Tamanho da fonte
    fontWeight: 'bold', // Negrito
    marginBottom: 20, // Espaço abaixo do título
    color: '#333', // Cor do texto
  },

  // Estilo da caixa do contador
  counterBox: {
    backgroundColor: '#fff', // Fundo branco
    padding: 40, // Espaçamento interno
    borderRadius: 20, // Bordas arredondadas
    elevation: 5, // Sombra no Android
    shadowColor: '#000', // Cor da sombra no iOS
    shadowOffset: { width: 0, height: 2 }, // Posição da sombra
    shadowOpacity: 0.25, // Transparência da sombra
    marginBottom: 30, // Espaço abaixo da caixa
  },

  // Estilo do número do contador
  number: {
    fontSize: 80, // Tamanho grande
    fontWeight: 'bold', // Negrito
    color: '#6200ee', // Cor roxa
  },

  // Container dos botões
  buttonContainer: {
    flexDirection: 'row', // Organiza em linha
    gap: 20, // Espaço entre os botões
  },

  // Estilo base dos botões
  button: {
    paddingHorizontal: 30, // Espaçamento lateral
    paddingVertical: 15, // Espaçamento vertical
    borderRadius: 10, // Bordas arredondadas
    minWidth: 100, // Largura mínima
    alignItems: 'center', // Centraliza texto dentro do botão
  },

  // Estilo do botão de aumentar
  increment: {
    backgroundColor: '#03dac6', // Cor verde/água
  },

  // Estilo do botão de diminuir
  decrement: {
    backgroundColor: '#cf6679', // Cor vermelha/rosa
  },

  // Estilo do texto dos botões
  buttonText: {
    color: '#fff', // Texto branco
    fontSize: 20, // Tamanho da fonte
    fontWeight: 'bold', // Negrito
  },

  // Estilo do texto de resetar
  resetText: {
    marginTop: 30, // Espaço acima
    color: '#666', // Cor cinza
    textDecorationLine: 'underline', // Sublinhado
  },

});
