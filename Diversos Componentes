import React, { useState, useEffect } from 'react';
import { 
  StyleSheet, 
  Text, 
  View, 
  TouchableOpacity, 
  TextInput, 
  FlatList 
} from 'react-native';

// Componente principal
export default function App() {

  // Estado para o contador
  const [count, setCount] = useState(0);

  // Estado para texto digitado
  const [text, setText] = useState('');

  // Estado para lista de itens
  const [items, setItems] = useState([]);
  // useEffect é executado quando o componente monta
  useEffect(() => {
    console.log('O componente foi montado!');
  }, []); // [] significa que roda apenas uma vez

  // useEffect para quando o contador muda
  useEffect(() => {
    console.log('Contador mudou para', count);
  }, [count]); // Executa toda vez que count mudar

  // Função para adicionar item à lista
  const addItem = () => {
    if(text.trim() !== '') {
      setItems([...items, { id: Date.now().toString(), name: text }]);
      setText('');
    }
  };

  return (
    <View style={styles.container}>

      {/* Contador */}
      <Text style={styles.title}>Contador</Text>
      <Text style={styles.number}>{count}</Text>
      <View style={styles.buttonRow}>
        <TouchableOpacity 
          style={[styles.button, styles.decrement]} 
          onPress={() => setCount(count - 1)}
        >
          <Text style={styles.buttonText}>-1</Text>
        </TouchableOpacity>
        <TouchableOpacity 
          style={[styles.button, styles.increment]} 
          onPress={() => setCount(count + 1)}
        >
          <Text style={styles.buttonText}>+1</Text>
        </TouchableOpacity>
        <TouchableOpacity 
          style={[styles.button, styles.reset]} 
          onPress={() => setCount(0)}
        >
          <Text style={styles.buttonText}>Zerar</Text>
        </TouchableOpacity>
      </View>

      {/* Input de texto */}
      <Text style={styles.title}>Adicionar Item</Text>
      <TextInput 
        style={styles.input} 
        placeholder="Digite algo" 
        value={text} 
        onChangeText={setText} // Atualiza o estado quando digita
      />
      <TouchableOpacity style={styles.addButton} onPress={addItem}>
        <Text style={styles.buttonText}>Adicionar</Text>
      </TouchableOpacity>

      {/* Lista de itens */}
      <Text style={styles.title}>Lista de Itens</Text>
      <FlatList 
        data={items} 
        keyExtractor={item => item.id}
        renderItem={({item}) => (
          <Text style={styles.listItem}>{item.name}</Text>
        )}
        ListEmptyComponent={<Text style={{color:'#777'}}>Nenhum item ainda</Text>}
      />

    </View>
  );
}

// Estilos
const styles = StyleSheet.create({
  container: {
    flex: 1,
    padding: 20,
    backgroundColor: '#f5f5f5',
    alignItems: 'center',
  },
  title: {
    fontSize: 24,
    fontWeight: 'bold',
    marginTop: 20,
    marginBottom: 10,
    color: '#333',
  },
  number: {
    fontSize: 50,
    fontWeight: 'bold',
    color: '#6200ee',
    marginBottom: 10,
  },
  buttonRow: {
    flexDirection: 'row',
    gap: 10,
    marginBottom: 20,
  },
  button: {
    paddingHorizontal: 20,
    paddingVertical: 10,
    borderRadius: 10,
    alignItems: 'center',
    minWidth: 80,
  },
  increment: {
    backgroundColor: '#03dac6',
  },
  decrement: {
    backgroundColor: '#cf6679',
  },
  reset: {
    backgroundColor: '#666',
  },
  buttonText: {
    color: '#fff',
    fontSize: 18,
    fontWeight: 'bold',
  },
  input: {
    borderWidth: 1,
    borderColor: '#333',
    borderRadius: 10,
    width: '100%',
    paddingHorizontal: 10,
    paddingVertical: 8,
    marginBottom: 10,
  },
  addButton: {
    backgroundColor: '#6200ee',
    paddingHorizontal: 20,
    paddingVertical: 10,
    borderRadius: 10,
    marginBottom: 20,
  },
  listItem: {
    fontSize: 18,
    color: '#333',
    paddingVertical: 5,
  },
});



