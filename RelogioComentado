import React, { useState, useEffect } from 'react';
import { View, Text, StyleSheet } from 'react-native';

export default function App() {
  const [seconds, setSeconds] = useState(0); // Estado para contador de segundos

  useEffect(() => {
    // Cria um intervalo que aumenta 1 segundo a cada 1000ms
    const interval = setInterval(() => {
      setSeconds(prev => prev + 1);
    }, 1000);

    // Cleanup: limpa o intervalo quando o componente desmonta
    return () => clearInterval(interval);
  }, []); // [] significa que roda apenas uma vez

  return (
    <View style={styles.container}>
      <Text style={styles.timer}>Segundos: {seconds}</Text>
    </View>
  );
}

const styles = StyleSheet.create({
  container:{ flex:1, justifyContent:'center', alignItems:'center' },
  timer:{ fontSize:30, fontWeight:'bold', color:'#6200ee' }
});
