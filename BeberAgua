import React, { useState } from 'react';
import { View, Text, TouchableOpacity, StyleSheet, Alert } from 'react-native';

export default function App() {
  const [cups, setCups] = useState(0); // Estado do n√∫mero de copos bebidos
  const goal = 8; // Meta di√°ria de copos

  // Fun√ß√£o chamada quando o usu√°rio bebe um copo
  const drinkWater = () => {
    const newCups = cups + 1;
    setCups(newCups);

    // Verifica se atingiu a meta
    if(newCups === goal){
      Alert.alert('Parab√©ns!', 'Voc√™ atingiu sua meta di√°ria de √°gua üíß');
    }
  };

  // Fun√ß√£o para resetar o contador
  const resetCups = () => {
    setCups(0);
  };

  return (
    <View style={styles.container}>
      {/* T√≠tulo do app */}
      <Text style={styles.title}>üíß Beba √Ågua!</Text>

      {/* Exibe o n√∫mero de copos bebidos */}
      <Text style={styles.counter}>{cups} / {goal} copos</Text>

      {/* Bot√£o para beber √°gua */}
      <TouchableOpacity style={styles.button} onPress={drinkWater}>
        <Text style={styles.buttonText}>Bebi um copo</Text>
      </TouchableOpacity>

      {/* Bot√£o para resetar */}
      <TouchableOpacity style={[styles.button, styles.resetButton]} onPress={resetCups}>
        <Text style={styles.buttonText}>Zerar</Text>
      </TouchableOpacity>

      {/* Mensagem de incentivo */}
      {cups < goal ? (
        <Text style={styles.message}>Continue bebendo √°gua üí¶</Text>
      ) : (
        <Text style={styles.message}>Meta alcan√ßada! Parab√©ns üéâ</Text>
      )}
    </View>
  );
}

// Estilos
const styles = StyleSheet.create({
  container:{
    flex:1,
    justifyContent:'center',
    alignItems:'center',
    backgroundColor:'#e0f7fa', // Fundo azul claro
    padding:20
  },
  title:{
    fontSize:32,
    fontWeight:'bold',
    marginBottom:30,
    color:'#00796b'
  },
  counter:{
    fontSize:28,
    marginBottom:20,
    color:'#004d40'
  },
  button:{
    backgroundColor:'#00796b',
    paddingHorizontal:30,
    paddingVertical:15,
    borderRadius:10,
    marginVertical:10
  },
  resetButton:{
    backgroundColor:'#c62828' // Vermelho para reset
  },
  buttonText:{
    color:'#fff',
    fontSize:18,
    fontWeight:'bold'
  },
  message:{
    marginTop:20,
    fontSize:18,
    color:'#004d40'
  }
});
