import React, { useState } from 'react';
import { View, Text, Button, StyleSheet } from 'react-native';
export default function App() {
  const [temperature, setTemperature] = useState(25);
  const [status, setStatus] = useState('');

  const checkTemperature = () => {
    if (temperature > 30) {
      setStatus('⚠️ Está muito quente! Ativar ar-condicionado.');
    } else {
      setStatus('✅ Temperatura está confortável.');
    }
  };
  return (
    <View style={styles.container}>
      <Text style={styles.temp}>
        Temperatura atual: {temperature}°C
      </Text>

      <View style={styles.button}>
        <Button
          title="Aumentar temperatura"
          onPress={() => setTemperature(prev => prev + 1)}
        />
      </View>

      <View style={styles.button}>
        <Button
          title="Verificar temperatura"
          onPress={checkTemperature}
        />
      </View>

      {status !== '' && (
        <Text style={styles.status}>
          {status}
        </Text>
      )}
    </View>
  );
}
const styles = StyleSheet.create({
  container: {
    flex: 1,
    justifyContent: 'center',
    alignItems: 'center',
    padding: 20
  },
  temp: {
    fontSize: 22,
    marginBottom: 20
  },
  button: {
    width: 220,
    marginVertical: 5
  },
  status: {
    marginTop: 20,
    fontSize: 18,
    textAlign: 'center'
  }
});
