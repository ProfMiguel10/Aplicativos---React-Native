import React, { useState } from 'react';
import { View, Text, TouchableOpacity, StyleSheet } from 'react-native';

export default function App() {
  const [darkMode, setDarkMode] = useState(false); // Estado do tema

  return (
    <View style={[styles.container, { backgroundColor: darkMode ? '#222' : '#fff' }]}>
      {/* Texto indicando o modo */}
      <Text style={[styles.text, { color: darkMode ? '#fff' : '#000' }]}>
        {darkMode ? 'Modo Escuro' : 'Modo Claro'}
      </Text>

      {/* Bot√£o para alternar tema */}
      <TouchableOpacity 
        style={[styles.button, { backgroundColor: darkMode ? '#03dac6' : '#6200ee' }]}
        onPress={() => setDarkMode(!darkMode)} // Alterna true/false
      >
        <Text style={styles.buttonText}>Alternar</Text>
      </TouchableOpacity>
    </View>
  );
}

const styles = StyleSheet.create({
  container:{ flex:1, justifyContent:'center', alignItems:'center' },
  text:{ fontSize:24, marginBottom:20, fontWeight:'bold' },
  button:{ padding:15, borderRadius:10 },
  buttonText:{ color:'#fff', fontWeight:'bold' }
});
